---
// Importar el CSS aquí en la parte del script
import '../styles/global.css';

interface Props {
    title?: string;
    description?: string;
}

const { 
    title = 'ForzaBox - Entrenamiento Funcional y CrossFit',
    description = 'Centro de Acondicionamiento Físico, Entrenamiento Funcional y Salud Integral en Ecuador'
} = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/webp" href="/favicon.webp" />
        <link rel="shortcut icon" type="image/webp" href="/favicon.webp" />
        <link rel="apple-touch-icon" href="/favicon.webp" />
        <meta name="generator" content={Astro.generator} />
        
        <!-- SEO Meta Tags -->
        <meta name="keywords" content="crossfit, entrenamiento funcional, gimnasio, fitness, Ecuador, ForzaBox" />
        <meta name="author" content="ForzaBox" />
        
        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        
        <!-- Fonts de Google -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Montserrat:wght@700;800;900&display=swap" rel="stylesheet">
        
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>