<style>
    #footer {
        background: linear-gradient(180deg, #1a1a1a 0%, #0d0d0d 100%);
        color: var(--accent-white);
        padding: 4rem 0 2rem;
        position: relative;
        overflow: hidden;
    }

    #footer::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(90deg, 
            transparent 0%, 
            var(--primary-cyan) 50%, 
            transparent 100%
        );
    }

    .footer-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    /* Contenido principal del footer */
    .footer-content {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1.5fr;
        gap: 3rem;
        margin-bottom: 3rem;
    }

    /* Columna de marca */
    .brand-column {
        max-width: 350px;
    }

    .footer-logo {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1.5rem;
    }

    .footer-logo img {
        height: 50px;
        width: auto;
        object-fit: contain;
    }

    .footer-logo-text {
        font-size: 1.75rem;
        font-weight: 800;
        color: var(--accent-white);
        font-family: var(--font-heading);
    }

    .logo-accent {
        color: var(--primary-cyan);
    }

    .footer-description {
        color: var(--text-gray);
        line-height: 1.6;
        margin-bottom: 1.5rem;
        font-size: 0.95rem;
    }

    /* Redes sociales */
    .social-links {
        display: flex;
        gap: 1rem;
    }

    .social-links a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 44px;
        height: 44px;
        background: rgba(0, 229, 204, 0.1);
        border: 1px solid rgba(0, 229, 204, 0.3);
        border-radius: 8px;
        color: var(--primary-cyan);
        transition: all 0.3s ease;
    }

    .social-links a:hover {
        background: var(--primary-cyan);
        color: var(--dark-accent);
        transform: translateY(-3px);
        box-shadow: 0 4px 15px rgba(0, 229, 204, 0.4);
    }

    .social-links svg {
        width: 20px;
        height: 20px;
    }

    /* Títulos de columnas */
    .footer-column h3 {
        color: var(--accent-white);
        font-size: 1.2rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        font-family: var(--font-heading);
        position: relative;
        padding-bottom: 0.75rem;
    }

    .footer-column h3::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 40px;
        height: 2px;
        background: var(--primary-cyan);
    }

    /* Enlaces */
    .footer-links {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-links li {
        margin-bottom: 0.75rem;
    }

    .footer-links a {
        color: var(--text-gray);
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-block;
        position: relative;
    }

    .footer-links a::before {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--primary-cyan);
        transition: width 0.3s ease;
    }

    .footer-links a:hover {
        color: var(--primary-cyan);
        padding-left: 0.5rem;
    }

    .footer-links a:hover::before {
        width: 100%;
    }

    /* Horarios */
    .footer-schedule {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-schedule li {
        margin-bottom: 1rem;
        padding: 0.75rem;
        background: rgba(0, 229, 204, 0.05);
        border-radius: 6px;
        border-left: 3px solid var(--primary-cyan);
    }

    .footer-schedule .day {
        display: block;
        color: var(--accent-white);
        font-weight: 600;
        margin-bottom: 0.25rem;
        font-size: 0.95rem;
    }

    .footer-schedule .time {
        display: block;
        color: var(--text-gray);
        font-size: 0.9rem;
    }

    /* Contacto */
    .footer-contact {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-contact li {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        margin-bottom: 1.25rem;
        color: var(--text-gray);
    }

    .footer-contact svg {
        flex-shrink: 0;
        margin-top: 0.25rem;
        color: var(--primary-cyan);
    }

    .footer-contact a {
        color: var(--text-gray);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .footer-contact a:hover {
        color: var(--primary-cyan);
    }

    /* Separador */
    .footer-divider {
        height: 1px;
        background: linear-gradient(90deg, 
            transparent 0%, 
            rgba(0, 229, 204, 0.3) 50%, 
            transparent 100%
        );
        margin: 3rem 0 2rem;
    }

    /* Footer inferior */
    .footer-bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    .legal-links {
        display: flex;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .legal-links a {
        color: var(--text-gray);
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s ease;
    }

    .legal-links a:hover {
        color: var(--primary-cyan);
    }

    .legal-links .separator {
        color: rgba(255, 255, 255, 0.2);
    }

    .copyright {
        color: var(--text-gray);
        font-size: 0.9rem;
    }

    .copyright p {
        margin: 0;
    }

    .developer {
        margin-top: 0.5rem !important;
        font-size: 0.85rem;
        opacity: 0.8;
    }

    .developer-link {
        color: var(--primary-cyan);
        text-decoration: none;
        transition: all 0.3s ease;
        border-bottom: 1px solid transparent;
    }

    .developer-link:hover {
        color: var(--cyan-light);
        border-bottom-color: var(--cyan-light);
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .footer-content {
            grid-template-columns: 1fr 1fr;
            gap: 2.5rem;
        }

        .brand-column {
            max-width: 100%;
            grid-column: 1 / -1;
        }
    }

    @media (max-width: 768px) {
        #footer {
            padding: 3rem 0 1.5rem;
        }

        .footer-container {
            padding: 0 1.5rem;
        }

        .footer-content {
            grid-template-columns: 1fr;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .footer-logo-text {
            font-size: 1.5rem;
        }

        .footer-column h3 {
            font-size: 1.1rem;
            margin-bottom: 1rem;
        }

        .footer-bottom {
            flex-direction: column;
            text-align: center;
            gap: 1rem;
        }

        .legal-links {
            justify-content: center;
        }
    }

    @media (max-width: 480px) {
        #footer {
            padding: 2.5rem 0 1.5rem;
        }

        .footer-container {
            padding: 0 1rem;
        }

        .footer-logo {
            justify-content: center;
        }

        .footer-logo img {
            height: 40px;
        }

        .footer-logo-text {
            font-size: 1.35rem;
        }

        .footer-description {
            text-align: center;
        }

        .social-links {
            justify-content: center;
        }

        .social-links a {
            width: 40px;
            height: 40px;
        }

        .footer-column h3 {
            text-align: center;
        }

        .footer-column h3::after {
            left: 50%;
            transform: translateX(-50%);
        }

        .footer-links,
        .footer-schedule {
            text-align: center;
        }

        .footer-contact li {
            justify-content: center;
            text-align: left;
        }

        .legal-links {
            flex-direction: column;
            gap: 0.5rem;
        }

        .legal-links .separator {
            display: none;
        }

        .copyright {
            font-size: 0.85rem;
        }
    }
</style>