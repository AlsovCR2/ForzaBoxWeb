<script>
    function initProgramsAnimations() {
        const sectionHeader = document.querySelector('.programs-section .section-header');
        const programCards = document.querySelectorAll('.program-card');
        const divider = document.querySelector('.programs-section .section-divider');
        const infoTitle = document.querySelector('.info-section-title');
        const infoSubtitle = document.querySelector('.info-section-subtitle');
        const infoCards = document.querySelectorAll('.info-card');
        const ctaBox = document.querySelector('.cta-box');

        const observerOptions = {
            threshold: 0.15,
            rootMargin: '0px 0px -10% 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate');
                }
            });
        }, observerOptions);

        // Observar elementos
        if (sectionHeader) observer.observe(sectionHeader);
        programCards.forEach(card => observer.observe(card));
        if (divider) observer.observe(divider);
        if (infoTitle) observer.observe(infoTitle);
        if (infoSubtitle) observer.observe(infoSubtitle);
        infoCards.forEach(card => observer.observe(card));
        if (ctaBox) observer.observe(ctaBox);
    }

    // Inicializar cuando el DOM esté listo
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initProgramsAnimations);
    } else {
        initProgramsAnimations();
    }
</script>