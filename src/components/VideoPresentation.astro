---
import videoPresentation from '../assets/VIDEO PRESENTACIÓN - FORZA BOX - OPTIMIZADO.mp4';
import videoPoster from '../assets/PORTADAS FORZA.webp';
---

<section id="video-presentation">
    <div class="video-container-wrapper">
        <div class="video-header">
            <h2>¿Qué es ForzaBox?</h2>
            <p class="video-subtitle">
                En este video, nuestro fundador te cuenta la historia detrás de ForzaBox, 
                nuestra filosofía de entrenamiento y cómo podemos ayudarte a transformar tu vida.
            </p>
        </div>

        <div class="video-column">
            <div class="video-container">
                <video 
                    id="presentation-video"
                    class="presentation-video"
                    controls
                    preload="metadata"
                    poster={videoPoster.src}
                    aria-label="Video de presentación de ForzaBox"
                >
                    <source src={videoPresentation} type="video/mp4" />
                    <p class="video-fallback">
                        Tu navegador no soporta la reproducción de videos. 
                        <a href={videoPresentation} download>Descarga el video aquí</a>.
                    </p>
                </video>
                
                <!-- Play button overlay personalizado -->
                <button class="play-button" id="play-button" aria-label="Reproducir video">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M8 5v14l11-7z"/>
                    </svg>
                </button>
                
                <!-- Badge de duración -->
                <div class="video-badge">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <polyline points="12 6 12 12 16 14"></polyline>
                    </svg>
                    <span>1 min</span>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    #video-presentation {
        padding: var(--spacing-xl) 0;
        background: linear-gradient(180deg, #F8F9FA 0%, #FFFFFF 100%);
        position: relative;
        overflow: hidden;
    }

    #video-presentation::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(90deg, 
            transparent 0%, 
            var(--primary-cyan) 50%, 
            transparent 100%
        );
    }

    .video-container-wrapper {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 var(--spacing-md);
    }

    /* ==================== HEADER ==================== */
    .video-header {
        text-align: center;
        margin-bottom: var(--spacing-xl);
        opacity: 0;
        animation: fadeInUp 0.8s ease forwards 0.2s;
    }

    .section-badge {
        display: inline-block;
        padding: 0.5rem 1.25rem;
        background: var(--cyan-transparent);
        color: var(--primary-cyan);
        border-radius: var(--radius-full);
        font-size: 0.875rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 1.5rem;
        border: 1px solid rgba(0, 229, 204, 0.2);
    }

    .video-header h2 {
        font-size: clamp(2rem, 5vw, 3rem);
        color: var(--dark-accent);
        margin-bottom: 1rem;
        font-weight: 800;
        position: relative;
        display: inline-block;
        background: linear-gradient(135deg, var(--dark-accent), var(--gray-dark));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .video-header h2::after {
        content: '';
        position: absolute;
        bottom: -0.5rem;
        left: 50%;
        transform: translateX(-50%);
        width: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--primary-cyan), var(--cyan-dark));
        border-radius: 2px;
        animation: expandLine 0.8s ease forwards 0.8s;
    }

    .video-subtitle {
        font-size: clamp(1rem, 2.5vw, 1.2rem);
        color: var(--gray-dark);
        line-height: 1.6;
        max-width: 700px;
        margin: 0 auto;
    }

    /* ==================== VIDEO ==================== */
    .video-column {
        position: relative;
        width: 100%;
        max-width: 900px;
        margin: 0 auto;
        opacity: 0;
        animation: scaleIn 1s cubic-bezier(0.4, 0, 0.2, 1) 0.5s forwards;
    }

    .video-container {
        position: relative;
        width: 100%;
        border-radius: var(--radius-xl);
        overflow: hidden;
        box-shadow: 
            0 10px 40px rgba(0, 0, 0, 0.15),
            0 0 0 1px rgba(0, 229, 204, 0.1);
        background: #000000;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .video-container::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, 
            rgba(0, 229, 204, 0.1) 0%, 
            transparent 50%, 
            rgba(0, 229, 204, 0.1) 100%);
        opacity: 0;
        transition: opacity 0.6s ease;
        z-index: 1;
        pointer-events: none;
    }

    .video-container:hover {
        box-shadow: 
            0 20px 60px rgba(0, 0, 0, 0.2),
            0 0 0 2px var(--primary-cyan),
            0 0 40px rgba(0, 229, 204, 0.3);
        transform: translateY(-8px) scale(1.02);
    }

    .video-container:hover::before {
        opacity: 1;
    }

    .video-badge {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(10px);
        color: var(--accent-white);
        padding: 0.5rem 1rem;
        border-radius: var(--radius-full);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        font-weight: 600;
        z-index: 5;
        border: 1px solid rgba(255, 255, 255, 0.1);
        opacity: 0;
        animation: fadeInSlideLeft 0.6s ease forwards 1.2s;
        transition: all 0.3s ease;
    }

    .video-badge:hover {
        background: rgba(0, 229, 204, 0.2);
        border-color: var(--primary-cyan);
        transform: translateX(-4px);
    }

    .video-badge svg {
        color: var(--primary-cyan);
        animation: pulse 2s ease-in-out infinite;
    }

    .presentation-video {
        width: 100%;
        height: auto;
        display: block;
        aspect-ratio: 16 / 9;
        object-fit: contain;
        background: #000000;
    }

    /* Play button overlay personalizado */
    .play-button {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) scale(0);
        width: 80px;
        height: 80px;
        background: rgba(0, 229, 204, 0.95);
        border: 4px solid var(--accent-white);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 10;
        box-shadow: 0 8px 32px rgba(0, 229, 204, 0.4);
        animation: bounceIn 0.8s cubic-bezier(0.68, -0.55, 0.265, 1.55) 0.8s forwards;
    }

    .play-button::before {
        content: '';
        position: absolute;
        inset: -8px;
        border: 2px solid var(--primary-cyan);
        border-radius: 50%;
        opacity: 0;
        animation: ripple 2s ease-out infinite;
    }

    .play-button svg {
        width: 32px;
        height: 32px;
        color: var(--dark-accent);
        margin-left: 4px;
        filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
        transition: transform 0.3s ease;
    }

    .play-button:hover {
        background: var(--primary-cyan);
        transform: translate(-50%, -50%) scale(1.15) rotate(5deg);
        box-shadow: 
            0 12px 48px rgba(0, 229, 204, 0.6),
            0 0 0 8px rgba(0, 229, 204, 0.2);
    }

    .play-button:hover svg {
        transform: scale(1.1);
    }

    .play-button:active {
        transform: translate(-50%, -50%) scale(0.95);
    }

    /* Ocultar el botón cuando el video está reproduciéndose */
    .video-container.playing .play-button {
        opacity: 0;
        pointer-events: none;
        transform: translate(-50%, -50%) scale(0);
        transition: all 0.3s ease;
    }

    .video-container.playing .play-button::before {
        animation: none;
    }

    /* Fallback para navegadores sin soporte */
    .video-fallback {
        padding: 2rem;
        text-align: center;
        color: var(--accent-white);
        background: var(--dark-accent);
    }

    .video-fallback a {
        color: var(--primary-cyan);
        text-decoration: underline;
    }

    /* ==================== RESPONSIVE ==================== */
    @media (max-width: 1024px) {
        #video-presentation {
            padding: var(--spacing-lg) 0;
        }

        .video-header {
            margin-bottom: var(--spacing-md);
        }

        .play-button {
            width: 70px;
            height: 70px;
        }

        .play-button svg {
            width: 28px;
            height: 28px;
        }
    }

    @media (max-width: 768px) {
        #video-presentation {
            padding: var(--spacing-md) 0;
        }

        .video-container-wrapper {
            padding: 0 var(--spacing-sm);
        }

        .video-header {
            margin-bottom: var(--spacing-md);
        }

        .video-header h2::after {
            width: 60px;
            height: 3px;
        }

        .video-container {
            border-radius: var(--radius-lg);
        }

        .play-button {
            width: 60px;
            height: 60px;
            border-width: 3px;
        }

        .play-button svg {
            width: 24px;
            height: 24px;
        }

        .video-badge {
            top: 0.75rem;
            right: 0.75rem;
            padding: 0.4rem 0.875rem;
            font-size: 0.8rem;
        }

        .video-subtitle {
            font-size: 0.95rem;
        }
    }

    @media (max-width: 480px) {
        .section-badge {
            padding: 0.4rem 1rem;
            font-size: 0.8rem;
            margin-bottom: 1rem;
        }

        .video-header h2::after {
            width: 50px;
        }

        .video-container {
            border-radius: var(--radius-md);
        }

        .play-button {
            width: 50px;
            height: 50px;
            border-width: 2px;
        }

        .play-button svg {
            width: 20px;
            height: 20px;
            margin-left: 3px;
        }

        .video-badge {
            top: 0.5rem;
            right: 0.5rem;
            padding: 0.35rem 0.75rem;
            font-size: 0.75rem;
            gap: 0.375rem;
        }

        .video-badge svg {
            width: 14px;
            height: 14px;
        }
    }

    /* ==================== ESTADOS DE CARGA ==================== */
    .presentation-video:not([src]) {
        background: #000000;
        min-height: 400px;
    }

    .presentation-video[poster] {
        background: #000000;
    }

    /* Loading spinner */
    @keyframes spin {
        to { transform: rotate(360deg); }
    }

    .video-container.loading .play-button {
        opacity: 0.5;
        pointer-events: none;
    }

    .video-container.loading::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 50px;
        height: 50px;
        margin: -25px 0 0 -25px;
        border: 4px solid rgba(0, 229, 204, 0.2);
        border-top-color: var(--primary-cyan);
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
        z-index: 5;
    }

    /* Accesibilidad - Focus visible */
    .play-button:focus-visible {
        outline: 3px solid var(--primary-cyan);
        outline-offset: 4px;
    }

    .presentation-video:focus-visible {
        outline: 3px solid var(--primary-cyan);
        outline-offset: -3px;
    }

    /* ==================== KEYFRAME ANIMATIONS ==================== */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes scaleIn {
        from {
            opacity: 0;
            transform: scale(0.9);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    @keyframes expandLine {
        from {
            width: 0;
        }
        to {
            width: 80px;
        }
    }

    @keyframes bounceIn {
        0% {
            transform: translate(-50%, -50%) scale(0);
            opacity: 0;
        }
        50% {
            transform: translate(-50%, -50%) scale(1.15);
        }
        70% {
            transform: translate(-50%, -50%) scale(0.95);
        }
        100% {
            transform: translate(-50%, -50%) scale(1);
            opacity: 1;
        }
    }

    @keyframes ripple {
        0% {
            opacity: 1;
            transform: scale(1);
        }
        100% {
            opacity: 0;
            transform: scale(1.5);
        }
    }

    @keyframes pulse {
        0%, 100% {
            opacity: 1;
            transform: scale(1);
        }
        50% {
            opacity: 0.7;
            transform: scale(0.95);
        }
    }

    @keyframes fadeInSlideLeft {
        from {
            opacity: 0;
            transform: translateX(20px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
</style>

<script>
    function initVideoPlayer() {
        const video = document.getElementById('presentation-video') as HTMLVideoElement;
        const playButton = document.getElementById('play-button') as HTMLButtonElement;
        const videoContainer = video?.closest('.video-container') as HTMLElement;

        if (!video || !playButton || !videoContainer) return;

        // Función para reproducir/pausar
        const togglePlay = () => {
            if (video.paused) {
                video.play()
                    .catch(error => {
                        console.error('Error al reproducir video:', error);
                        videoContainer.classList.remove('playing');
                    });
            } else {
                video.pause();
            }
        };

        // Event listeners
        playButton.addEventListener('click', (e) => {
            e.stopPropagation();
            togglePlay();
        });

        video.addEventListener('click', togglePlay);

        // Ocultar botón cuando comienza la reproducción
        video.addEventListener('play', () => {
            videoContainer.classList.add('playing');
        });

        video.addEventListener('pause', () => {
            videoContainer.classList.remove('playing');
        });

        video.addEventListener('ended', () => {
            videoContainer.classList.remove('playing');
        });

        video.addEventListener('loadstart', () => {
            videoContainer.classList.add('loading');
        });

        video.addEventListener('loadeddata', () => {
            videoContainer.classList.remove('loading');
        });

        video.addEventListener('canplay', () => {
            videoContainer.classList.remove('loading');
        });

        video.addEventListener('error', () => {
            videoContainer.classList.remove('loading');
            console.error('Error al cargar el video');
        });

        video.addEventListener('keydown', (e) => {
            if (e.key === ' ' || e.key === 'Enter') {
                e.preventDefault();
                togglePlay();
            }
        });

        playButton.addEventListener('keydown', (e) => {
            if (e.key === 'Enter') {
                e.preventDefault();
                togglePlay();
            }
        });
    }

    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initVideoPlayer);
    } else {
        initVideoPlayer();
    }
</script>